    // ------------------------------------------- Button ------------------------------------------

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/appButtonHeight</item>
        <item name="android:layout_marginStart">@dimen/appButtonMargins</item>
        <item name="android:layout_marginEnd">@dimen/appButtonMargins</item>
        <item name="android:layout_marginTop">@dimen/dimen_4</item>
        <item name="android:layout_marginBottom">@dimen/dimen_4</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:textSize">20sp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="cornerRadius">@dimen/dimen_16</item>
        <item name="android:backgroundTint">@color/colorButtonNormal</item>
        <item name="android:textAppearance">@style/Font.Medium</item>

    </style>

    <style name="Button.NumPad" parent="Button">
        <item name="android:layout_width">@dimen/dimen_84</item>
        <item name="android:layout_height">@dimen/dimen_84</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:backgroundTint">@color/colorSmartBackground</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textAppearance">@style/Font</item>
        <!--        <item name="rippleColor">@color/colorOnPrimary</item>-->

    </style>

    // ------------------------------------------- ImageButton -------------------------------------

    <style name="ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dimen_8</item>
        <item name="android:paddingBottom">@dimen/dimen_8</item>
        <item name="android:paddingStart">@dimen/dimen_8</item>
        <item name="android:paddingEnd">@dimen/dimen_8</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <!--        <item name="android:background">@null</item>-->

    </style>

    // ------------------------------------------- Floating Button ---------------------------------

    <style name="FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="tint">@android:color/white</item>

    </style>

    // ------------------------------------------- EditText ----------------------------------------

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center</item>
        <item name="android:maxLines">1</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:hint">@string/app_name</item>
        <item name="android:textColor">@color/colorTextViewNormal</item>
        <item name="android:textColorHint">@color/colorTextInputHint</item>
        <item name="android:selectAllOnFocus">true</item>
        <!--        <item name="android:textCursorDrawable">@drawable/shape_cursor</item>-->
        <item name="android:textAppearance">@style/Font.Medium</item>
        <item name="android:background">@null</item>
    </style>

    // ------------------------------------------- View --------------------------------------------

    <style name="View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/black</item>

    </style>

    // ------------------------------------------- ImageView ---------------------------------------

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:adjustViewBounds">true</item>
        <!--        <item name="leon_default_icon">@drawable/ic_profile_default</item>-->

    </style>

    // ------------------------------------------- CardView ----------------------------------------

    <style name="CardView.Base" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardBackgroundColor">@android:color/white</item>
        <item name="cardCornerRadius">@dimen/appComponentRadius</item>
        <item name="cardElevation">@dimen/dimen_4</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="android:layout_marginStart">@dimen/dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/dimen_8</item>
        <item name="android:layout_marginBottom">@dimen/dimen_16</item>

    </style>

    // ------------------------------------------- TabLayout ---------------------------------------

    <style name="TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layoutDirection">locale</item>
        <item name="android:textDirection">locale</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabTextAppearance">@style/TabLayout.TextAppearance</item>
        <item name="android:elevation">0dp</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabTextColor">@android:color/black</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
        <!--        <item name="tabRippleColor">@android:color/transparent</item>-->

    </style>

    <style name="TabLayout.NoIndicator" parent="TabLayout">
        <item name="tabRippleColor">@android:color/white</item>
        <!--        <item name="tabBackground">@drawable/selector_tab_background</item>-->

    </style>

    <style name="TabLayout.Indicator" parent="TabLayout.NoIndicator">
        <item name="tabIndicatorHeight">1dp</item>
        <item name="tabIndicatorColor">@color/colorPrimary</item>
        <item name="tabIndicatorFullWidth">true</item>

    </style>

    <style name="TabLayout.Dots" parent="TabLayout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:elevation">0dp</item>
        <item name="tabBackground">@drawable/selector_tab_layout_dot</item>
        <item name="tabGravity">center</item>
        <item name="tabMaxWidth">@dimen/dimen_16</item>

    </style>

    <style name="TabLayout.TextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>


    // ------------------------------------------- BottomNav ---------------------------------------

    <style name="BottomNav" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_56</item>
        <item name="android:layout_gravity">bottom</item>
        <!--        <item name="itemBackground">@drawable/selector_bottom_nav_background</item>-->

        <!-- To Disable Shifting Mode-->
        <item name="labelVisibilityMode">labeled</item>

    </style>

</resources>